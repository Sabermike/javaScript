var greeting = "Hello ";
var myName = "Misha";
together = greeting + myName; 
console.log(together);

start = "Supermassive black hole".length; // Рахує і пробіли, length - дізнаємось довжина рядку 
console.log(start);


var  codeWord1 = "are";
var  codeWord2 = "tubas";
var  codeWord3 = "unsafe";
var  codeWord4 = "?!";

codeWord = codeWord1[1] + codeWord2[1] + codeWord3[1] + codeWord4[1]; // тут ми за допомогою масиву дізнаємось слово "run" видобуваємо з рядка  

console.log(codeWord);

var longString = "My long string is long"; 
long1 = longString.slice(3, 14); // Тут ми відрізаємо рядок за допомогою оператора slice
console.log(long1); //Тут нам виведе long string

long2 = longString.slice(8); 
console.log(long2);

