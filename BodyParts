var m1 = [3,2,1];
var m2 = m1[Math.floor(Math.random() *3)];
var m3 = m1[Math.floor(Math.random() *3)];
var m4 = m1[Math.floor(Math.random() *3)];

var m3 = [m2, "is", "bigger", "than", m3, "is", "begger", "than", m4].join(" ");
console.log(m3);
