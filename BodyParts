var randomBodyParts = ["Face", "Nose", "Hair"];
var randomAdjectives = ["Smelly", "Boring", "Stupid"];
var randomWords = ["Fly", "Marmot", "Stick", "Monkey", "Rat"];
var randomAnimal = ["Rat", "Bat", "Mouse", "Coyote", "Hedgehog"]

var randomBodyPart = randomBodyParts[Math.floor(Math.random() *3)];
var randomAdjective = randomAdjectives[Math.floor(Math.random() *3)];
var randomWord = randomWords[Math.floor(Math.random() * randomWords.length)];
var randomAnimalBodyPart = randomAnimal[Math.floor(Math.random() * randomWords.length)];

//var randomInsult = "Yor " + randomBodyPart + " is like a " + randomAdjective + " " + randomWord + "!!!";

var randomInsult1 = ["Your", randomBodyPart, "is", "like", "a", randomAdjective, randomWord + "!!!"].join(" "); 

var randomInsult2 = ["Your", randomBodyPart, "is", "more", randomAdjective, "than", "a", randomAnimalBodyPart + "!!!"].join(" "); 

console.log(randomInsult1);
console.log(randomInsult2);

